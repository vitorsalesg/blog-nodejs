<h2>LISTA DE POSTAGENS</h2>
<hr>
<a href="/admin/postagens/add">
    <button type="button" class="btn btn-primary">Cadastrar Postagem</button>
</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Postagens</button></a>         
            <a href="/admin/postagem/delete/{{_id}}"><button class="btn btn-danger mt-4">Deletar Postagem</button></a>         
        </div>
    </div>
{{else}}
    <p>Nenhuma Postagem Registrada</p>
{{/each}}


